extends layout

block content
    
    // Signup
    div.row.contentSection
        div.col-sm-6.col-sm-offset-3.col-xs-12#mc_embed_signup
            form(action='/signup', method='post')
                div.col-sm-8.mc-field-group
                    input(type='text', name='firstName', placeholder='First Name')
                div.col-sm-8.mc-field-group
                    input(type='text', name='lastName', placeholder='Last Name')
                div.col-sm-8.mc-field-group
                    input(type='text', name='email', placeholder='Email')
                div.col-sm-8.mc-field-group
                    input(type='password', name='password', placeholder='Password')
                div.col-sm-8.mc-field-group
                    input(type='password', name='confirmPassword', placeholder='Confirm Password')
                div.col-sm-8.mc-field-group
                    select(name='classification')
                        option(value='Freshman') Freshman
                        option(value='Sophomore') Sophomore
                        option(value='Junior') Junior
                        option(value='Senior') Senior
                        option(value='Graduate') Graduate
                        option(value='Doctorate') Doctorate
                div.col-sm-8.clear
                    input.button#mc-embedded-subscribe(type='submit', value='Signup', name='signup')
                    p= message
