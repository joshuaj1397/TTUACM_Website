extends layout

block content
    
    // Profile
    div.row.contentSection#alt-color
        div.col-sm-10.col-sm-offset-1.col-xs-12
            div.col-sm-12.col-xs-12.info
                h3 Name: #{user.local.firstName} #{user.local.lastName}
            div.col-sm-12.col-xs-12.info
                h3 Email: #{user.local.email}
            div.col-sm-12.col-xs-12.info
                h3 Classification: #{user.local.classification}
            div.col-sm-12.col-xs-12.info
                p
                    a(href='/forgot') Change password
